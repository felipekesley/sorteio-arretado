{
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineWidth": 100
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "double",
			"quoteStyle": "single",
			"semicolons": "asNeeded",
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,

		"rules": {
			"suspicious": {
				"noArrayIndexKey": "off"
			},
			"a11y": {
				"useValidLang": "off"
			}
		}
	}
}
